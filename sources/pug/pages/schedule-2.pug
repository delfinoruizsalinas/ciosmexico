extends  ../_skeleton

include ../components/_ui-event-item

block variables
	- pageName = 'Schedule 2'

block page 
	// Page Header
	include ../sections/_header-classic

	+breadcrumbs({
		img: 'images/speakers-title-bg.jpg',
		title: 'Schedule #2'
	})
	
	section.section-lg.section.bg-gray-1
		.container
			#tabs-1.tabs-custom.tabs-horizontal.tabs-classic
				ul.nav.nav-tabs.nav-tabs-classic
					li.nav-item(role='presentation'): a.nav-link.active(href='#tabs-1-1' data-toggle='tab') Day 1
					li.nav-item(role='presentation'): a.nav-link(href='#tabs-1-2' data-toggle='tab') Day 2
					li.nav-item(role='presentation'): a.nav-link(href='#tabs-1-3' data-toggle='tab') Day 3
				.tab-content
					div#tabs-1-1.tab-pane.fade.show.active
						.box-event-modern
							+event-item-modern({
								classMod: 'event-active',
								time: '2:00 pm - 4:00 pm ',
								title: 'Kate Wilson & The Punks'
							})
								p One of the most talented singers of the pop punk scene, Kate Wilson with her group The Punks, will perform her latest songs and widely known hits on the Rock Stage.
							+event-item-modern({
								time: '4:00 pm - 7:00 pm ',
								title: 'Jane Smith & Sam Wilson (Acoustic Concert)'
							})
							+event-item-modern({
								time: '7:00 pm - 11:00 pm ',
								title: 'DJ Dusk b2b Rage Quit (DJ Set)'
							})
							+event-item-modern({
								time: '11:00 pm - 2:00 am',
								title: 'Solar Moonz & Basskickers (Live Performance)'
							})
					div#tabs-1-2.tab-pane.fade
						.box-event-modern
							+event-item-modern({
								classMod: 'event-active',
								time: '4:00 pm - 7:00 pm ',
								title: 'Jane Smith & Sam Wilson (Acoustic Concert)'
							})
							+event-item-modern({
								time: '7:00 pm - 11:00 pm ',
								title: 'DJ Dusk b2b Rage Quit (DJ Set)'
							})
							+event-item-modern({
								time: '11:00 pm - 2:00 am',
								title: 'Solar Moonz & Basskickers (Live Performance)'
							})
					div#tabs-1-3.tab-pane.fade
						.box-event-modern
							+event-item-modern({
								classMod: 'event-active',
								time: '7:00 pm - 11:00 pm ',
								title: 'DJ Dusk b2b Rage Quit (DJ Set)'
							})
							+event-item-modern({
								time: '11:00 pm - 2:00 am',
								title: 'Solar Moonz & Basskickers (Live Performance)'
							})

	// Page Footer
	include ../sections/_footer-classic
